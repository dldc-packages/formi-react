{
  "$schema": "https://json.schemastore.org/tsconfig",
  "include": ["src", "tests", "vitest.config.ts", "example", "vite.config.ts"],
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "target": "ESNext",
    "module": "ES2020",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "importHelpers": false,
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "isolatedModules": true,
    "declaration": true,
    "sourceMap": true,
    "noEmit": true,
    "types": [],
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true
  }
}
